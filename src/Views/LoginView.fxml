<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
    <children>
        <GridPane layoutX="45.0" layoutY="135.0" prefHeight="122.0" prefWidth="518.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="294.0" minWidth="10.0" prefWidth="151.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="449.0" minWidth="10.0" prefWidth="449.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="userNameLbl" />
                <Label fx:id="passwordLbl" GridPane.rowIndex="1" />
                <TextField fx:id="userNameTxt" promptText="Enter User ID" GridPane.columnIndex="1" />
                <PasswordField fx:id="passwordTxt" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
            <opaqueInsets>
                <Insets left="20.0" right="20.0" />
            </opaqueInsets>
        </GridPane>
        <HBox alignment="CENTER_LEFT" layoutX="150.0" layoutY="257.0" prefHeight="100.0" prefWidth="440.0" spacing="20.0">
            <children>
                <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#onActionSubmitToLogin" />
                <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#onActionCloseProgram" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
      <HBox layoutX="28.0" layoutY="14.0" prefHeight="26.0" prefWidth="573.0" spacing="5.0">
         <children>
            <Label fx:id="zoneIDTextLbl" />
            <Label fx:id="zoneIDLbl" />
         </children>
      </HBox>
    </children>
</AnchorPane>
